{
  "hosting": {
    "cleanUrls":true,
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects":[
      {
        "source":"/db/:rest",
        "destination":"https://ergatas-postgrest-nym5uikx2a-uc.a.run.app/:rest",
        "type":"302"
      }

    ],
    "rewrites": [
		 {
			 "source": "/api{,/**}",
			 "run":{
				 "serviceId":"ergatas-web"
			 }
     },
     {
        "source": "**",
        "destination": "/index.html"
     }
    ]
  }
}
